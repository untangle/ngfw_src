# activation stuff...
UNTANGLE_HARDWARE=@UVM_HOME@/.untanglehw
FAKE_KEY=0000-0000-0000-0000
ACTIVATION_KEY_FILE=@UVM_HOME@/activation.key
REGISTRATION_DONE_FILE=@UVM_HOME@/.regdone
REGISTRATION_INFO_FILE=@UVM_HOME@/registration.info
POPID_FILE=@UVM_HOME@/popid
REMOTE_SUPPORT_ENABLE_URL_TEMPLATE="https://activation.untangle.com/cgi-bin/enable-remote-support.rb?license_key=%s&internal_ip=%s"
KEY_VERIFICATION="@PREFIX@/usr/bin/utverifykey"
KEY_TEMPLATE=XXX_REG_KEY_XXX
ETC_ISSUE=/etc/issue
SOURCES_LIST_OLD=@PREFIX@/etc/apt/sources.list
SOURCES_LIST_NEW=@PREFIX@/${SOURCES_LIST_OLD}.d/untangle.list
# finding the correct repository
grep -q Debian $ETC_ISSUE && i=3 || i=2
case `head -1 $ETC_ISSUE | awk "{ print \\$$i }"` in
  3.1) REPOSITORY=sarge SOURCES_LIST=${SOURCES_LIST_OLD} ;;
  4.0) REPOSITORY=etch SOURCES_LIST=${SOURCES_LIST_NEW} ;;
  5.0) REPOSITORY=lenny SOURCES_LIST=${SOURCES_LIST_NEW} ;;
  lenny/sid) REPOSITORY=sid SOURCES_LIST=${SOURCES_LIST_NEW} ;;
  7.04*) REPOSITORY=feisty SOURCES_LIST=${SOURCES_LIST_NEW} ;;
  7.10*) REPOSITORY=gutsy SOURCES_LIST=${SOURCES_LIST_NEW} ;;
  8.04*|hardy) REPOSITORY=hardy SOURCES_LIST=${SOURCES_LIST_NEW} ;;
  8.10*|intrepid) REPOSITORY=intrepid SOURCES_LIST=${SOURCES_LIST_NEW} ;;
  # FIMXE !!!
  *) REPOSITORY=etch SOURCES_LIST=${SOURCES_LIST_NEW} ;;
esac
DEFAULT_UNTANGLE_SOURCE="deb http://${KEY_TEMPLATE}:untangle@updates.untangle.com/public/${REPOSITORY} stable main premium upstream\ndeb http://${KEY_TEMPLATE}:untangle@updates.untangle.com/public/${REPOSITORY} silverado main premium upstream"
