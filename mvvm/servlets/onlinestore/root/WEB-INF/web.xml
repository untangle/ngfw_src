<!DOCTYPE web-app
PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
"http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

  <display-name>Store</display-name>

  <servlet>
    <servlet-name>Proxy</servlet-name>
    <servlet-class>
      com.untangle.mvvm.servlet.store.ProxyServlet
    </servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>Proxy</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>InstallRequest</servlet-name>
    <servlet-class>
      com.untangle.mvvm.servlet.store.InstallRequestServlet
    </servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>InstallRequest</servlet-name>
    <url-pattern>/instreq</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>InstalledAppliances</servlet-name>
    <servlet-class>
      com.untangle.mvvm.servlet.store.InstalledAppliances
    </servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>InstalledAppliances</servlet-name>
    <url-pattern>/installed.js</url-pattern>
  </servlet-mapping>


  @JSP_PRE_COMPILED_SERVLETS@

  <security-constraint>
    <web-resource-collection>
      <url-pattern>/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>user</role-name>
    </auth-constraint>
  </security-constraint>

  <security-role>
    <role-name>user</role-name>
  </security-role>

  <login-config>
    <auth-method>BASIC</auth-method>
    <realm-name>Edgeguard Administrator</realm-name>
  </login-config>
</web-app>
