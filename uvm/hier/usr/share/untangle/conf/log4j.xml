<!-- $Id: log4j.xml,v 1.00 2012/04/12 21:57:25 dmorris Exp $ -->
<!-- This comment should be reflected on upgrade. Changing root log to ALL -->

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">

  <!-- ============================================== -->
  <!-- Appenders                                      -->
  <!-- ============================================== -->

  <appender name="UVMLOG" class="org.apache.log4j.net.SyslogAppender">
    <param name="SyslogHost" value="localhost"/>
    <param name="Facility" value="LOCAL0"/>
    <param name="Threshold" value="ALL"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="[%c{1}:%L] %-5p %m%n"/>
    </layout>
  </appender>

  <appender name="EVENTS" class="org.apache.log4j.net.SyslogAppender">
    <param name="SyslogHost" value="localhost"/>
    <param name="Facility" value="LOCAL5"/>
    <param name="Threshold" value="ALL"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%-5p %m%n"/>
    </layout>
  </appender>

  <appender name="APPLOG" class="org.apache.log4j.net.SyslogAppender">
    <param name="SyslogHost" value="localhost"/>
    <param name="Facility" value="LOCAL1"/>
    <param name="Threshold" value="ALL"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="@AppLogFileName@: [%c{1}:%L] &lt;%X{SessionID}&gt; %-5p %m%n"/>
    </layout>
  </appender>

  <!-- ============================================== -->
  <!-- Misc Categories                                -->
  <!-- ============================================== -->

  <category name="org.apache">
    <priority value="WARN"/>
  </category>

  <category name="org.apache.catalina">
    <priority value="INFO"/>
  </category>

  <category name="org.apache.jk">
    <priority value="INFO"/>
  </category>

  <category name="org.jabsorb">
