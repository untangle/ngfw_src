#! /bin/bash

DNS_TRIES=4
DNS_TIMEOUT=2
TEST_HOST="updates.untangle.com"

if [ $# -lt 1 ] ; then
    echo "Usage: $0 <dns-server-ip>"
    exit 1
fi

DNS_SERVER=$1

if [ "x$2" != "x" ] ; then
    TEST_HOST=$2
fi

if [ -z "${DNS_SERVER}" ]; then
    exit 1
fi

lookup() {
    local address=$1
    local server=$2

    dig @${server} +tries=${DNS_TRIES} +time=${DNS_TIMEOUT} +short ${address} 
}

lookup ${TEST_HOST} ${DNS_SERVER}
if [ $? != "0" ]; then
    exit 1
fi

exit 0
