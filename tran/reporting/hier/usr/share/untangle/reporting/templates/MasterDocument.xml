<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE document
	PUBLIC "-//UJAC.org//Print Document//EN" 
	"http://ujac.sourceforge.net/ujac-print-document.dtd">

<document size="LETTER" margin-left="25" margin-right="25" margin-top="50" margin-bottom="50">
  <!-- Calculate the date period -->
  <if cond="${type == 'Daily'}">
    <set-property name="period" type="String" value="${start}"/>
  </if>
  <else>
    <set-property name="period" type="String" value="${start + ' to ' + end}"/>
  </else>

  <!-- Insert the cover page -->
  <if cond="${coverPageProperties isDefined}">
    <insert-sub-document source="${templateDirectory + coverPageTemplate}" 
                         properties="${propertiesDirectory + coverPageProperties}"/>
  </if>
  <else>
    <insert-sub-document source="${templateDirectory + coverPageTemplate}"/>
  </else>

  <if cond="${tocProperties isDefined}">
    <insert-sub-document source="${templateDirectory + tocTemplate}" 
                         properties="${propertiesDirectory + tocProperties}"/>
  </if>
  <else>
    <insert-sub-document source="${templateDirectory + tocTemplate}"/>
  </else>

  <!-- Iterate all of the sub reports -->
  <foreach sequence="${reports}" loop-variable="row">
    <!-- Use the default template -->
    <set-property name="template" type="String" value="${defaultBriefingTemplate}"/>

    <!-- If the row overrides the template, use its template -->
    <if cond="${row.briefingTemplate != ''}">
      <set-property name="template" type="String" value="${row.briefingTemplate}"/>
    </if>

    <set-property name="iconOrganization" type="String" value="${row.iconOrganization}"/>
    <set-property name="iconDescription" type="String" value="${row.iconDescription}"/>

    <insert-sub-document source="${templateDirectory + template}" 
                         properties="${propertiesDirectory + row.properties}" name="${row.link}"/>
  </foreach>

  <!-- Insert all of the detailed reports -->
  <if cond="${showDetailedReports == 'true'}">
    <foreach sequence="${reports}" loop-variable="row">
      <!-- Use the default template -->
      <set-property name="template" type="String" value="${defaultDetailedTemplate}"/>

      <set-property name="iconOrganization" type="String" value="${row.iconOrganization}"/>
      <set-property name="iconDescription" type="String" value="${row.iconDescription}"/>

      <!-- If the row overrides the template, use its template -->
      <if cond="${row.detailedTemplate != ''}">
        <set-property name="template" type="String" value="${row.detailedTemplate}"/>
      </if>

      <if cond="${row.detailed == 'true'}">
        <insert-sub-document source="${templateDirectory + template}" 
                             properties="${propertiesDirectory + row.properties}"/>
      </if>
    </foreach>
  </if>
  <else>
    <!-- Here is where the last page indicating that the detailed reports are hidden would go -->
  </else>
</document>
