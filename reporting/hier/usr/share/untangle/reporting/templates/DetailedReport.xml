<!DOCTYPE document
	PUBLIC "-//UJAC.org//Print Document//EN" 
	"http://ujac.sourceforge.net/ujac-print-document.dtd">

<document size="LETTER" margin-left="25" margin-right="25" margin-top="50" margin-bottom="50">
  <set-property name="linkPrefix"     type="String" value="link-"/>
  
  <font-def name="header"    family="Helvetica" size="12" style="bold"/>
  <font-def name="normal"    family="Helvetica" size="12" style="normal"/>
  <font-def name="statistic" family="Helvetica" size="11" style="normal"/>
  <font-def name="small"     family="Helvetica" size="9"  style="normal"/>
  <font-def name="title"     family="Helvetica" size="16" style="bold"/>
  <font-def name="subtitle"  family="Helvetica" size="12" style="bold"/>


  <header font="small">
    <header-part halign="left">
      <!-- ${reportTitle} -->
    </header-part>
  </header>

  <footer font="small">
    <footer-part padding-top="10" halign="center">
      <!-- Page ${pageNumber} of ${pageCount} -->
    </footer-part>
  </footer>

  <!-- Now iterate all reports and insert them at the end -->
  <foreach sequence="${detailed}" loop-variable="row">
    <if cond="${row.userSummaryLink == ''}">
       <insert-document source="${pdfDirectory + row.filename}" name='${linkPrefix + row.filename}'/>
    </if>
    <else>
      <!-- user summary reports are not like summary and detail reports
           - the "top" user summary report is listed in report-files
             but JasperReports does not automatically generate
             html and pdf files of the "top" user summary report
             - usersummary-reports and generate-pdf manually generates
               html and pdf files of the "top" user summary report
             - the "top" user summary report is included as a sub document and
               compiled with the master document
               (this name is same as the specified link name in Briefing.xml)
           - the "sub" user summary reports are not explicitly listed
             in report-files but JasperReports automatically generates
             html and pdf files of the necessary "sub" user summary reports
             - usersummary-reports uses JasperReports to automatically generate
               html and pdf files of the "top" user summary report
             - the pdf files of "sub" user summary reports are included
               (right now)
               (this name is same as the specified link name in Briefing.xml)
       -->

      <set-property name="origtemplate" type="String" value="${template}"/>
      <set-property name="template" type="String" value="${usersummaryTemplate}"/>
      <!-- Insert "top" user summary report next -->
      <insert-sub-document source="${templateDirectory + template}" 
                           properties="${propertiesDirectory + row.properties}"
                           name="${row.userSummaryLink}"/>
      <set-property name="template" type="String" value="${origtemplate}"/>

      <!-- Now iterate all "sub" user summary reports and insert them next -->
      <foreach sequence="${unamesum}" loop-variable="row">
        <insert-document source="${pdfDirectory + row.filename}" name='${linkPrefix + row.filename}'/>
      </foreach>
      <foreach sequence="${hnamesum}" loop-variable="row">
        <insert-document source="${pdfDirectory + row.filename}" name='${linkPrefix + row.filename}'/>
      </foreach>
    </else>
  </foreach>

</document>

