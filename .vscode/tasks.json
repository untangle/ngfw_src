{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build remote",
            "type": "shell",
            "command": "./.vscode/vsbuild.sh -e remote -t ${input:target_address}",
            "group": {
                "kind": "build"
            }
        },{
            "label": "Build local",
            "type": "shell",
            "command": "./.vscode/vsbuild.sh -e local",
            "group": {
                "kind": "build"
            }
        },{
            "label": "Build i18n template for localization",
            "type": "shell",
            "command": "./.vscode/vsbuild.sh -e remote -b i18n",
            "group": {
                "kind": "build"
            }
        },{
            "label": "Search for tests",
            "type": "shell",
            "command": "./.vscode/tests.sh -t ${input:target_address} -g -r \"${input:tests}\"",
            "group": {
                "kind": "build"
            }
        },{
            "label": "Run tests",
            "type": "shell",
            "command": "./.vscode/vsbuild.sh -e remote -t ${input:target_address} && ./.vscode/tests.sh -t \"${input:target_address}\" -h \"${input:test_client_address}\" -r \"${input:tests}\"  ",
            "group": {
                "kind": "build"
            }
        },{
            "label": "Setup glowroot local",
            "type": "shell",
            "command": "./.vscode/glowroot.sh",
            "problemMatcher": []
        }
        },{
            "label": "Setup glowroot local",
            "type": "shell",
            "command": "./.vscode/glowroot.sh",
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "target_address",
            "type":"promptString",
            "description": "IP of NGFW",
            "default": "192.168.1.30"
        },
        {
            "id": "test_client_address",
            "type":"promptString",
            "description": "IP of test client",
            "default": "192.168.56.100"
        },
        {
            "id": "tests",
            "type":"promptString",
            "description": "Tests to run (runtests arguments like -t <suite> amd/or -T <tests> comma separated",
            "default": "-t network -T test_148_invert_iptables_command,test_150_filter_rules_blocked_event_log,test_151_filter_rules_blocked_src_comma,test_152_filter_rules_blocked_src_comma_many,test_153_filter_rules_blocked_src_mac_comma,test_154_filter_rules_blocked_client_tagged"
        }
    ]
}
